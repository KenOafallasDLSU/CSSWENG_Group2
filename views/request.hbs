<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Request | Office of Counseling and Career Services</title>
</head>
    <style>
      input[type=text], select, textarea {
        width: 100%; 
        padding: 12px; 
        border: 1px solid #ccc; 
        border-radius: 4px; 
        box-sizing: border-box; 
        margin-top: 6px; 
        margin-bottom: 16px; 
        resize: vertical 
      }

      input[type=submit] {
        background-color: #4CAF50;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

      input[type=submit]:hover {
        background-color: #45a049;
      }

      .container-form {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
      }
    </style>
<body>
    <!-- header | navbar -->
    <nav class="navbar navbar-light" style="background-color: rgb(88, 182, 116);">
        <!-- Navbar content -->
        <div class="row align-items-center justify-content-center" style="width: 75px; height: 75px;">
            OCCS Logo
        </div>
    </nav>
    
    <div class="container-fluid">
        <div class="row p-2 border-bottom">
            <div class="col-10 col-sm-10">
                <small>
                    Logged in as Student Representative
                </small>
            </div>
            <div class="col-2 col-sm-2">
                <button type="submit" id="btnTimein" class="btn btn-outline-success btn-sm">Time-in</button>
            </div>
        </div>
        
        <div class="row p-2row">
            <div class="col-2 col-sm-2">
               {{>navbar}}
            </div>
            <div class="col-5 col-sm-5 container-form d-flex justify-content-center" padding-left: "300px">      
                <!-- Request Form -->
                <form name="register" id="register" method="POST">
                    
                    <!-- Request Type -->
                    <div class="form-row">
                        <div class="form-group col-sm-12 input-group">
                            <label for="country">Type of Request</label>
                            <select id="type" name="type">
                                <option value="retroactive">Retroactive Time-in Request</option>
                                <option value="retroactive">Retroactive Time-out Request</option>
                            </select>
                        </div>
                    </div>
                            
                    <div class="form-row">
                        <div class="form-group col-sm-12 input-group">
                            <label for="Request">Request:</label>
                        </div>
                    </div>

                    <!-- Date Select -->
                    <div class="form-row">
                        <div class="form-group col-sm-12 input-group">
                            <label for="sDate">Select date</label>
                            <div class="col-sm-4">
                                <input type="date" id="sDate" name="sDate">
                            </div>
                        </div>
                    </div>

                    <!-- Time  Select -->
                    <div class="form-row">
                        <div class="form-group col-sm-12 input-group">
                            <label for="sTime">Select time</label>
                            <div class="col-sm-4">
                                <input type="time" id="sTime" name="sTime">
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-sm-12 input-group">
                            <label for="sReason">Reason:</label>
                            <input type="text" id="sReason" name="sReason" placeholder="...">
                        </div>
                    </div>
                    
                    <!-- Submit button -->
                    <div class="form-row">
                        <div class="form-group col-sm-12">
                            <button type="submit" id="btnRequest" class="btn btn-md btn-success btn-block">Submit</button>
                        </div>
                    </div>
                </form>
            </div>   
        </div>
    </div>
        
    <!-- Bs4 -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>

</body>
</html>