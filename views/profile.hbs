<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile | Office of Counseling and Career Services</title>

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>

    </head>
<body>
    <!-- header | navbar -->
    {{>header}}
    <div class="container-fluid">
        {{>subHeader}}
       
        <div class="row p-2">
            {{>navBar}}   
            <div class="col-8 col-sm-8">
                <form name="login" id="login" method="POST">
                    <!-- Name -->
                    <div class="form-row">
                        <div class="form-group col-sm-6 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                   <i class="fa fa-user icon"></i>
                                </span>
                            </div>
                            <label for="sFirstName" class="sr-only">First Name</label>
                            <input type="text" name="sFirstName" id="sFirstName" class="form-control" placeholder="First Name">
                        </div>
                        <div class="form-group col-sm-6 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                     <i class="fa fa-user icon"></i>
                                </span>
                            </div>
                            <label for="sLastName" class="sr-only">Last Name</label>
                            <input type="text" name="sLastName" id="sLastName" class="form-control" placeholder="Last Name">
                        </div>
                    </div>
    
                    <div class="form-row">
                        <div class="form-group col-sm-7 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    @
                                </span>
                            </div>
                            <label for="sEmail" class="sr-only">Email</label>
                            <input type="email" name="sEmail" id="sEmail" class="form-control" placeholder="Email Address">
                        </div>
                        <div class ="form-group col-sm-5 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="far fa-address-card"></i> 
                                </span>
                            </div>
                            <label for="sEmail" class="sr-only">Degree Program</label>
                            <input type="email" name="sEmail" id="sEmail" class="form-control" placeholder="Degree Program">
                        </div>
                    </div>
    
                    <!-- ID Number & Degree Program -->
                    <div class="form-row">
                        <div class="form-group col-sm-5 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                      <i class="far fa-address-card"></i> 
                                </span>
                            </div>
                            <label for="nIDNumber" class="sr-only">ID Number</label>
                            <input type="number" name="nIDNumber" id="nIDNumber" class="form-control" placeholder="ID Number">
                        </div>
                        
                        <div class="form-group col-sm-7 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                     <i class="fas fa-birthday-cake icon"></i>
                                </span>
                            </div>
                            <label for="sBirthdate" class="sr-only">Birthday</label>
                            <input type="date" name="sBirthdate" id="sBirthdate" class="form-control" placeholder="Birthday">
                        </div>
                    </div>
                    
                    <!-- Submit button -->
                    <div class="form-row">
                        <div class="form-group col-sm-10">
                            <button type="submit" id="btnUpdateProfile" class="btn btn-md btn-success">Update Profile</button>
                        </div>
                    </div>
                </form>

                <p><hr></p>
                <p><h>Check residency hours</h></p>
                <div class="col-9 col-sm-9 container-form">
                    <!-- Start Date -->
                    <div class="form-row">
                        <label for="startdate">Start Date</label>
                        <input type="date" name="sStartdate" id="sStartdate" class="form-control" placeholder="sStartdate">
                    </div></p>

                    <!-- End Date -->
                    <div class="form-row">
                        <label for="enddate"> End Date</label>
                        <input type="date" name="sEnddate" id="sEnddate" class="form-control" placeholder="sEnddate">           
                    </div></p>
                            
                    <!-- Submit button -->
                    <div class="form-row">
                        <div class="form-group col-sm-12">
                            <button type="submit" id="###" class="btn btn-md btn-success btn-sm">Confirm</button>
                        </div>
                    </div></p>
                </div>

                <table class="table table-striped">
                    <thead class="thread-dark">
                        <tr>
                            <th scope="col">Starting date</th>
                            <th scope="col">End Date</th>
                            <th scope="col">Total Hours</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">{{sStartdate}}</th>
                            <td>{{sEnddate}}</td>
                            <td>Total hours</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
        
    <!-- Bs4 -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous">
    </script>

</body>
</html>