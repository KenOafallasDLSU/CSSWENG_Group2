<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Requests | Office of Counseling and Career Services</title>
</head>
<body>
    <!-- header | navbar -->
    {{> header}}
    <div class="container-fluid">
        {{>subHeader}}
        <div class="row">
            {{> navBar}}   
            <div class="col-9 col-sm-9 justify-content-center">

                <table class="table table-striped">
                    <thead class="thread-dark" align ="center">>
                        <tr>
                            <th scope="col">User Id</th>
                            <th scope="col">Reason</th>
                            <th scope="col">Task</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody align ="center">
                        {{#each RequestEntry}}
                            <tr>
                                <th scope="row">{{nCount}}</th>
                                <td>{{sReason}}</td>
                                <td>{{sName}}</td>
                                <td>
                                    <button class="btn btn-sm btn-success" id ="btnAcceptRequest" >Accept</button>
                                    <button class="btn btn-sm btn-danger" id ="btnRejectRequest">Reject</button>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row"></th>
                                <td>Details--</td>
                            </tr>
                        {{/each}}	
                    </tbody>
                </table>
            </div>
        </div>
    </div>
       
    
    
    <!-- Bs4 -->
    <script src="/js/pendingRequest.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>

</body>
</html>